<div class="text-center">
 <div calss="row">
  <h2>プロフィール編集</h2><br>
  <%= form_with model:@user, local:true do |f| %>
    <%= attachment_image_tag @user,:profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "200x200" %><br><br>
    <label for="inputImage"></label><br><br>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br><br>
    <label for="inputName">ニックネーム</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br><br>

    <%= f.submit "変更を保存" %>
  <% end %>
 </div>
</div>
