<h1>画像投稿フォーム</h1>
<% if @resipi.errors.any? %>
  <%= @resipi.errors.count %>件のエラーが発生しました
  <% @resipi.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @resipi, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>ショップ名</h4>
  <%= f.text_field :name %>
  <h4>説明</h4>
  <%= f.text_area :material %>
  <h4>説明</h4>
  <%= f.text_area :introduction %>
  <%= f.submit '投稿' %>
<% end %>