<div>
<h3><%= @user.name %></h3>
 <%= attachment_image_tag @user,:profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @resipis.each do |resipi| %>
<div>
  <%= link_to resipi_path(resipi.id) do %>
    <%= attachment_image_tag resipi, :image, format: 'jpeg', fallback: "no_image.jpg", size: "500x440"   %>
  <% end %>
  
  <p>ショップ名：<%= resipi.name %></p>
  <p>説明：<%= resipi.material %></p>
  <p>ユーザーネーム：<%= resipi.user.name %></p>
</div>
<% end %>
<%= paginate @resipis %>